START
MOV SP, 2048
MOV BP, SP
JMP MAIN
factorial:
PUSH BP
MOV BP, SP
MOV R0, 0
PUSH R0
MOV R1, BP
MOV R2, -3
ADD R1, R2
MOV R0, [R1]
MOV R1 1
EQ R0, R1
JZ R0, LABEL0
MOV R0 1
MOV R1, BP
MOV R2, 1
ADD R1, R2
MOV [R1], R0
LABEL0:MOV R1, BP
MOV R2, -3
ADD R1, R2
MOV R0, [R1]
MOV R1 1
GT R0, R1
JZ R0, LABEL1
MOV R1, BP
MOV R2, -3
ADD R1, R2
MOV R0, [R1]
PUSH R0
MOV R2, BP
MOV R3, -3
ADD R2, R3
MOV R1, [R2]
MOV R2 1
SUB R1, R2
PUSH R1
PUSH R0
CALL factorial
MOV R1, [SP]
POP R2
POP R2
POP R0
MUL R0, R1
MOV R1, BP
MOV R2, 1
ADD R1, R2
MOV [R1], R0
LABEL1:MOV R1, BP
MOV R2, 1
ADD R1, R2
MOV R0, [R1]
MOV R1, BP
MOV R2, 2
SUB R1, R2
MOV [R1], R0
MOV SP, BP
POP BP
RET
swap:
PUSH BP
MOV BP, SP
MOV R0 5
MOV R1, BP
MOV R2, -3
ADD R1, R2
MOV R3, [R1]
MOV [R3], R0
MOV R6, R3
OUT R6
MOV R0 10
MOV R1, BP
MOV R2, -4
ADD R1, R2
MOV R3, [R1]
MOV [R3], R0
MOV R0 0
MOV R6, R3
OUT R6
MOV R1, BP
MOV R2, 2
SUB R1, R2
MOV [R1], R0
MOV SP, BP
POP BP
RET
MAIN :
MOV R0, 0
PUSH R0
PUSH R0
PUSH R0
MOV R0 7
MOV R1, BP
MOV R2, 2
ADD R1, R2
MOV [R1], R0
MOV R0 17
MOV R1, BP
MOV R2, 3
ADD R1, R2
MOV [R1], R0
MOV R1, BP
MOV R2, 2
ADD R1, R2
MOV R0, [R1]
OUT R0
MOV R1, BP
MOV R2, 3
ADD R1, R2
MOV R0, [R1]
OUT R0
MOV R1, BP
MOV R2, 2
ADD R1, R2
MOV R3, [R1]
PUSH R3
MOV R1, BP
MOV R2, 3
ADD R1, R2
MOV R3, [R1]
PUSH R3
PUSH R0
CALL swap
MOV R0, [SP]
POP R1
POP R1
POP R1
MOV R1, BP
MOV R2, 1
ADD R1, R2
MOV [R1], R0
MOV R1, BP
MOV R2, 2
ADD R1, R2
MOV R0, [R1]
OUT R0
MOV R1, BP
MOV R2, 3
ADD R1, R2
MOV R0, [R1]
OUT R0
MOV R0 0
MOV R1, BP
MOV R2, 2
SUB R1, R2
MOV [R1], R0
POP R0
POP R0
POP R0
JMP EXIT
EXIT:
HALT
